{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["next/core-web-vitals", "eslint:recommended"],
  "rules": {
    "no-unused-vars": "off",
    "no-useless-escape": "off",
    "no-undef": "off",
    "no-empty": "off",
    "react/no-unescaped-entities": "off",
    "no-constant-binary-expression": "off"
  }
}
